<config xmlns="urn:org:jgroups"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:org:jgroups file:schema/JGroups-2.8.xsd
urn:org:jgroups ">
   <UDP
         mcast_addr="${jgroups.udp.mcast_addr:232.10.10.10}"
         mcast_port="${jgroups.udp.mcast_port:45588}"
         loopback="false"
         ucast_recv_buf_size="20000000"
         ucast_send_buf_size="640000"
         mcast_recv_buf_size="25000000"
         mcast_send_buf_size="640000"
         discard_incompatible_packets="true"
         max_bundle_size="64000"
         max_bundle_timeout="30"
         ip_ttl="${jgroups.udp.ip_ttl:2}"
         enable_bundling="false"
         thread_naming_pattern="cl"

         timer_type="new"
         timer.min_threads="4"
         timer.max_threads="4"
         timer.keep_alive_time="5000000000"
         timer.queue_max_size="500"

         thread_pool.enabled="true"
         thread_pool.min_threads="200"
         thread_pool.max_threads="200"
         thread_pool.keep_alive_time="5000000000"
         thread_pool.queue_enabled="true"
         thread_pool.queue_max_size="100000"
         thread_pool.rejection_policy="discard"

         oob_thread_pool.enabled="true"
         oob_thread_pool.min_threads="200"
         oob_thread_pool.max_threads="200"
         oob_thread_pool.keep_alive_time="5000000000"
         oob_thread_pool.queue_enabled="true"
         oob_thread_pool.queue_max_size="100000"
         oob_thread_pool.rejection_policy="discard"
         />

   <PING timeout="2000"
         num_initial_members="3"/>
   <MERGE2 max_interval="100000"
           min_interval="20000"/>
   <FD_SOCK bind_addr="${BIND_ADDRESS}"/>
   <FD_ALL timeout="60000"
           interval="10000"/>
   <pbcast.NAKACK use_mcast_xmit="true"
                  retransmit_timeout="300,600,1200,2400,4800"
                  discard_delivered_msgs="true"/>
   <UNICAST2 timeout="300,600,1200" 
             stable_interval="5000" 
             max_bytes="1000000"/>
   <pbcast.STABLE stability_delay="500"
                  desired_avg_gossip="5000"
                  max_bytes="1000000"/>
   <pbcast.GMS print_local_addr="true"
               join_timeout="3000"
               view_bundling="true"
               view_ack_collection_timeout="5000"
               resume_task_timeout="7500"/>
   <UFC max_credits="200000"
        min_threshold="0.20"/>
   <MFC max_credits="200000"
        min_threshold="0.20"/>
   <FRAG2 frag_size="8000"/>
   <RSVP timeout="600000"
         resend_interval="500"
         ack_on_delivery="false"/>
</config>
